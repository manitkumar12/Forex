<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context="com.grademojo.forex.MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="#ffffff"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:src="@drawable/logo_blue"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="40dp"

                />




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginTop="50dp"


                >

                <TextView
                    android:id="@+id/name_text_view_sign_in"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="E-mail or Phone"
                    android:textSize="14sp"
                    android:layout_marginStart="10dp"
                    android:textColor="#e8eaee"
                    />

                <EditText
                    android:id="@+id/email_name_text_sign_in"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:layout_marginStart="10dp"
                    android:lines="1"
                    android:inputType="textEmailAddress"
                    android:layout_below="@+id/name_text_view_sign_in"
                    />

                <View
                    android:id="@+id/name_border_line"
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:background="#e8eaee"
                    android:layout_alignStart="@+id/email_name_text_sign_in"
                    android:layout_alignEnd="@+id/email_name_text_sign_in"
                    android:layout_below="@+id/email_name_text_sign_in"

                    />




                <TextView
                    android:id="@+id/professional_text_view_sign_in"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Password"
                    android:textSize="14sp"
                    android:layout_marginStart="10dp"
                    android:textColor="#e8eaee"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/name_border_line"
                    />

                <EditText
                    android:id="@+id/profession_edit_text_sign_in"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:layout_marginStart="10dp"
                    android:lines="1"
                    android:inputType="textPassword"
                    android:layout_below="@+id/professional_text_view_sign_in"
                    />

                <ImageView
                    android:id="@+id/eye"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/eye"
                    android:layout_toEndOf="@+id/profession_edit_text_sign_in"
                    android:layout_alignBottom="@+id/profession_edit_text_sign_in"
                    />

                <View
                    android:id="@+id/profession_border_line"
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:background="#e8eaee"
                    android:layout_alignStart="@+id/profession_edit_text_sign_in"
                    android:layout_alignEnd="@+id/eye"
                    android:layout_below="@+id/profession_edit_text_sign_in"

                    />

                <TextView
                    android:id="@+id/password_text_view_sign_in"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Confirm password"
                    android:textSize="14sp"
                    android:layout_marginStart="10dp"
                    android:textColor="#e8eaee"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/profession_border_line"
                    />

                <EditText
                    android:id="@+id/password_edit_text_sign_in"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:layout_marginStart="10dp"
                    android:lines="1"
                    android:inputType="textPassword"
                    android:layout_below="@+id/password_text_view_sign_in"
                    />

                <ImageView
                    android:id="@+id/eye_1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/eye"
                    android:layout_toEndOf="@+id/password_edit_text_sign_in"
                    android:layout_alignBottom="@+id/password_edit_text_sign_in"
                    />

                <View
                    android:id="@+id/password_border_line"
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:background="#e8eaee"
                    android:layout_alignStart="@+id/password_edit_text_sign_in"
                    android:layout_alignEnd="@+id/eye"
                    android:layout_below="@+id/password_edit_text_sign_in"

                    />






            </RelativeLayout>



            <android.support.v7.widget.CardView
                android:id="@+id/card_view_sign_up_next_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="19dp"
                android:layout_marginTop="50dp"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                app:cardBackgroundColor="#3f88fb"

                app:cardElevation="0dp"

                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:weightSum="1"
                    >

                    <TextView
                        android:id="@+id/text_view_sign_up_next_2"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:layout_marginStart="20dp"
                        android:text="Next"
                        android:textAllCaps="true"
                        android:gravity="center"
                        android:textColor="#ffffff"
                        />

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/aa"
                        android:layout_gravity="center"
                        android:layout_marginEnd="20dp"
                        />




                </LinearLayout>


            </android.support.v7.widget.CardView>



        </LinearLayout>

    </ScrollView>















</LinearLayout>
